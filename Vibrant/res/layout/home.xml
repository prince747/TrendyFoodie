<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd"
    android:paddingBottom="100dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="100dp"
    tools:context=".Home" >

    <Button
        android:id="@+id/home_button_how"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#00D980"
        android:text="How does it work?"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <Button
        android:id="@+id/home_button_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_button_how"
        android:layout_marginTop="5dp"
        android:background="#00D980"
        android:text="Share!"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <Button
        android:id="@+id/home_button_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_button_share"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#00D980"
        android:text="About Us"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <Button
        android:id="@+id/home_button_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_button_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#00D980"
        android:text="Contact us!"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <Button
        android:id="@+id/home_button_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_button_contact"
        android:layout_marginTop="5dp"
        android:background="#E4575A"
        android:text="Start Ordering"
        android:textColor="#ffffff"
        android:textSize="25dp" />

</RelativeLayout>